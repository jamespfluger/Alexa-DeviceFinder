<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeviceFinder.LoginPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="51*"/>
                <RowDefinition Height="18*"/>
                <RowDefinition Height="26*"/>
            </Grid.RowDefinitions>
            <Image x:Name="LoginLogo" Source="Images/logo_large.png" Grid.Row="0"
                   HorizontalOptions="Center" VerticalOptions="Center">
            </Image>
            <Label x:Name="LoginLabel" Grid.Row="1" Margin="0, 18, 0, 0" TextColor="Black"
                   FontSize="40" FontFamily="Arial" HorizontalTextAlignment="Center"
                   HorizontalOptions="Center" VerticalOptions="Center">
                Alexa&#10;Device Finder
            </Label>
            <Button x:Name="LoginButton" Grid.Row="2" Margin="0, 0, 0, 18"
                    ImageSource="Images/amazon_logo" Text="LOGIN WITH AMAZON"
                    HorizontalOptions="Center" VerticalOptions="Center">
            </Button>
        </Grid>
    </ContentPage.Content>
</ContentPage>